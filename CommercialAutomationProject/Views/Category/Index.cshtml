@using CommercialAutomation.Models.Classes
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover" style="margin-top:20px;">
    <tr>
        <th style="width:100px;">ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.CategoryID</td>
            <td>@c.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@c.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/GetCategory/@c.CategoryID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Category/AddCategory" class="btn btn-primary">Kategori Ekle</a>


@model CommercialAutomation.Models.Classes.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<center style="border:double;"><h2>Yeni Kategori Ekle</h2></center>
<br />

<form class="form-group" method="post">

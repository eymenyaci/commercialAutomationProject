    <br />
    @Html.LabelFor(x => x.InvoiceDeliverer)
    @Html.TextAreaFor(x => x.InvoiceDeliverer, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.InvoiceReceiver)

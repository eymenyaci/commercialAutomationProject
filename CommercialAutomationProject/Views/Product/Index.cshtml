@using CommercialAutomation.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Ürün Adı</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>
        <th>Aktiflik</th>
        <th>Ürün Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductID</td>
            <td>@p.ProductName</td>
            <td>@p.ProductBrand</td>
            <td>@p.ProductStock</td>
            <td>@p.PurchasePrice</td>
            <td>@p.SalePrice</td>
            <td>@p.Category.CategoryName</td>
            @if (p.ProductStatus == true)
            {
                <td>Aktif</td>
}
            else
            {
                <td>Pasif</td>
}
            <td>@p.ProductImage</td>
            <td><a href="/Product/DeleteProduct/@p.ProductID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/GetProduct/@p.ProductID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Product/AddProduct" class="btn btn-primary">Ürün Ekle</a>



@using CommercialAutomation.Models.Classes
@model List<Staff>
@{
    ViewBag.Title = "DetailsDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<center style="border:double;"><h2>Departman Detay</h2></center>
<br />
<div class="card-header">
    <i class="fa fa-user"></i>&nbsp;
    Departman Adı : @ViewBag.v
</div>
<table class="table table-hover">
    <tr>
        <th>Personel ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Personel Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.StaffID</td>
            <td>@x.StaffName</td>
            <td>@x.StaffSurname</td>
            <td>@x.StaffImage</td>
            <td><a href="/Department/DepartmentStaffSales/@x.StaffID" class="btn btn-default" style="background-color:navajowhite">Satışlar</a></td>
        </tr>
    }
</table>


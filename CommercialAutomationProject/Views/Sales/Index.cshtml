@using CommercialAutomation.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
   
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    
    @foreach (var v in Model)
    {
        <tr>
            <td>@v.SalesID</td>
            <td>@v.Product.ProductName</td>
            <td>@v.Current.CurrentName @v.Current.CurrentSurname</td>
            <td>@v.Staff.StaffName @v.Staff.StaffSurname</td>
            <td>@v.SalesUnit</td>
            <td>@v.SalesPrices</td>
            <td>@v.SalesTotalPrices</td>
            <td>@v.SalesDate</td>
            <td><a href="/Sales/GetSales/@v.SalesID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Sales/DetailSales/@v.SalesID" class="btn btn-success" style="background-color:blue;">Detaylar</a></td>

        </tr>
    }
</table>
<a href="/Sales/AddSales" class="btn btn-primary">Satış Ekle</a>



@using CommercialAutomation.Models.Classes
@model List<SalesMovement>
@{
    ViewBag.Title = "SalesCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<center style="border:double;"><h2>Müşteri Satış Geçmişi</h2></center>
<br />
<div class="card-header">
    <a href="/Current/Index" class="btn btn-secondary">Geri</a>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fa fa-user"></i>&nbsp;
    Müşteri Adı : @ViewBag.viewName
</div>

<table class="table table-hover">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Personel Ad</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.SalesID</td>
            <td>@x.Product.ProductName</td>
            <td>@x.Staff.StaffName @x.Staff.StaffSurname</td>
            <td>@x.SalesPrices</td>
            <td>@x.SalesUnit</td>
            <td>@x.SalesTotalPrices</td>
            <td>@x.SalesDate</td>
            <td><a href="#" class="btn btn-default" style="background-color:dodgerblue">Yazdır</a></td>
        </tr>
    }
</table>


